<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택됐을 때의 색상 -->
    <item android:state_selected="true">
        <shape>
            <corners
                android:topLeftRadius="18dp"
                android:topRightRadius="18dp"
                android:bottomLeftRadius="18dp"
                android:bottomRightRadius="18dp" />
            <solid android:color="#297BF5" />
            <gradient
                android:startColor="#297BF5"
                android:endColor="#2674E1"
                android:angle="270"/>
            <size android:width="62dp" android:height="36dp" />
        </shape>
    </item>

    <!-- 선택되지 않았을 때의 색상 -->
    <item>
        <shape>
            <corners
                android:topLeftRadius="18dp"
                android:topRightRadius="18dp"
                android:bottomLeftRadius="18dp"
                android:bottomRightRadius="18dp" />
            <solid android:color="#F2F3F5" />
            <gradient
                android:startColor="#F2F3F5"
                android:endColor="#E7E8EA"
                android:angle="270"/>
            <size android:width="62dp" android:height="36dp" />
        </shape>
    </item>
</selector>
