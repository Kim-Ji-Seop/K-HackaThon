<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 등록 가능한 상태 (버튼이 활성화된 상태) -->
    <item android:drawable="@drawable/button_enable_state" android:state_enabled="true" />

    <!-- 등록 불가능한 상태 (버튼이 비활성화된 상태) -->
    <item android:drawable="@drawable/button_disable_state" android:state_enabled="false" />

</selector>
