<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KHackaThon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->


        <!-- Remove the title bar -->
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor" tools:targetApi="Sv2">@color/status_bar</item>
        <!-- Status bar text color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="Sv2">true</item>
    </style>
</resources>